<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".planillero.viewActivities.EditarCuenta.Fragment_Editar_Cuenta_Planillero">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/principal"
        android:paddingTop="0dp"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/view_blue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/EditarPerfil"
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_blue"
        app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:id="@id/volver"
                android:src="@drawable/volver"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar perfil"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                app:layout_constraintTop_toBottomOf="@+id/volver"
                />

        </LinearLayout>

<!--        <View-->
<!--            android:id="@+id/view_white"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:background="#FFFFFF"-->
<!--            app:layout_constraintTop_toBottomOf="@id/view_blue"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"/>-->

<!--        &lt;!&ndash; Círculo de imagen &ndash;&gt;-->
        <ImageView
            android:id="@+id/image_circle"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_perfil_foto"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/EditarPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/borar"
            android:contentDescription="@string/eliminar"
            app:layout_constraintBottom_toBottomOf="@id/image_circle"
            app:layout_constraintStart_toStartOf="@id/image_circle"
            android:layout_marginStart="-7dp"
            android:layout_marginBottom="-7dp"/>
        <ImageView
            android:id="@+id/icon_add"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/add"
        android:contentDescription="@string/agregar"
            app:layout_constraintBottom_toBottomOf="@id/image_circle"
            app:layout_constraintEnd_toEndOf="@id/image_circle"
            android:layout_marginEnd="-7dp"
            android:layout_marginBottom="-7dp"/>
        <LinearLayout
            android:id="@+id/form_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/image_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                />
            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="0FSFS"
                android:textColorHint="@android:color/white"
             android:text="Aaron"
                android:inputType="textPersonName"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/image_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"/>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:inputType="textEmailAddress"/>


            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="phone"/>


            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>