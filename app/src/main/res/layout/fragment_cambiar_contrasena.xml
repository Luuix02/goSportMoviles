<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".jugador.viewActivities.fragments.cambiarContrasena.CambiarContrasena">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="180dp">

        <!-- Campo de Contraseña actual -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Contraseña Actual"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>

            <ImageView
                android:id="@+id/ivToggleCurrentPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ver_contra"
                android:contentDescription="@string/toggle_password_visibility"/>
        </LinearLayout>

        <!-- Campo de Nueva Contraseña -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nueva Contraseña"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>

            <ImageView
                android:id="@+id/ivToggleNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ver_contra"
                android:contentDescription="@string/toggle_password_visibility"/>
        </LinearLayout>

        <!-- Campo de Confirmar Nueva Contraseña -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etConfirmNewPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Confirmar Contraseña"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/edittext_background"/>

            <ImageView
                android:id="@+id/ivToggleConfirmNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ver_contra"
                android:contentDescription="@string/toggle_password_visibility"/>
        </LinearLayout>

        <!-- Botón para Cambiar la Contraseña -->
        <Button
            android:id="@+id/btnguardarcambios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Contraseña"
            android:textColor="#FFFFFF"
            android:backgroundTint="#11A3BD"
            android:padding="12dp" />

    </LinearLayout>

</FrameLayout>
