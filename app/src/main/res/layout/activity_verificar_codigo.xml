<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="250dp"
    android:padding="20dp"
    tools:context=".ActivityVerificarCodigo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <EditText
            android:id="@+id/codigo1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1" />
        <EditText
            android:id="@+id/codigo2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1" />
        <EditText
            android:id="@+id/codigo3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1" />
        <EditText
            android:id="@+id/codigo4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1" />
        <EditText
            android:id="@+id/codigo5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1" />
        <EditText
            android:id="@+id/codigo6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1" />

        <!-- Agregar m치s EditTexts para completar los 6 campos de c칩digo -->
        <!-- Puedes copiar y pegar el EditText anterior cambiando solo el id -->
    </LinearLayout>

    <!-- Bot칩n para verificar el c칩digo -->
    <Button
        android:id="@+id/btnVerificarCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#11A3BD"
        android:text="Verificar" />

</LinearLayout>
