<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".planillero.viewActivities.Resultados.Fragment_Resultados"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:orientation="vertical"
        android:background="#11A3BD"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/borde_card_equipos"
            android:padding="7dp"
            android:layout_marginBottom="35dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resultados"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginBottom="2dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <FrameLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/tarjetaamarillaaa"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:id="@+id/ContadorTarjetaAmarillaEquipo1"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"/>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginBottom="5dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/tarjetarooja" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:id="@+id/ContadorTarjetaRojaEquipo1"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="17sp"/>
                            </FrameLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/FotoLogoEquipo1Result"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/nacional"
                            android:background="@drawable/border_imagenes"
                            android:layout_gravity="end"
                            android:layout_marginLeft="5dp"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/nombreEquipo1Result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/equipo_1"
                        android:padding="1dp"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="9dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/GolEquipo1R"
                            android:textSize="29dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text=":"
                            android:textSize="29dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/GolEquipo2R"
                            android:textSize="29dp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/FotoLogoEquipo2Result"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/nacional"
                            android:background="@drawable/border_imagenes"
                            android:layout_gravity="end"
                            android:layout_marginLeft="5dp"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/tarjetaamarillaaa"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:id="@+id/ContadorTarjetaAmarillaEquipo2"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"/>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/tarjetarooja" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:id="@+id/ContadorTarjetaRojaEquipo2"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="17sp"/>
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/equipo2Result"
                        android:text="@string/equipo_2"
                        android:textSize="14dp"
                        android:padding="1dp"
                        android:textAlignment="center"
                        android:layout_marginTop="4dp"

                        />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_div_participantes"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:text="@string/equipo_1"
                        android:id="@+id/BotonEquipo1Result"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#11A3BD"
                        android:textColor="@color/white"
                        />
                    <View
                        android:id="@+id/rayitaEquipo2"
                        android:layout_width="90dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="30dp"
                        android:background="@android:color/black"
                        android:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <Button
                        android:layout_width="140dp"
                        android:layout_height="45dp"
                        android:text="@string/equipo_1"
                        android:id="@+id/BotonEquipo2Result"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#11A3BD"
                        android:textColor="@color/white"
                        />
                    <View
                        android:id="@+id/rayitaEquipo1"
                        android:layout_width="90dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="26dp"
                        android:background="@android:color/black"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/equipo_name"
                android:id="@+id/nombreEquipoSeleccionadoR"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="435dp"
                    android:id="@+id/recicleJugadorParticipantes"
                    android:orientation="vertical"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#11A3BD"
                    android:textColor="@color/white"
                    android:id="@+id/BotonFinalizar"
                    android:text="@string/finalizar_partido"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>