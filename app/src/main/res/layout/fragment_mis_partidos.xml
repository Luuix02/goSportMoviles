<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jugador.viewActivities.fragments.misPartidosFragments.FragmentMisPartidos">

    <!-- Contenedor principal en vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Título centrado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus partidos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="90dp"/>

        <!-- ScrollView para manejar más tarjetas si es necesario -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Tarjeta del partido -->
                <LinearLayout
                    android:id="@+id/matchItem1"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/border"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Equipos y marcador -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Equipo 1 -->
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp">

                            <ImageView
                                android:id="@+id/imgEquipo1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nacional" />
                        </androidx.cardview.widget.CardView>

                        <!-- Marcador -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:text="0 - 0"
                            android:textSize="24sp" />

                        <!-- Equipo 2 -->
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="8dp">

                            <ImageView
                                android:id="@+id/imgEquipo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nacional" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Fecha del partido -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="26/07/2024"
                        android:textAlignment="center"
                        android:textSize="16sp" />
<!--                        android:background="@drawable/border"-->


                    <!-- Botón Ver -->
                    <Button
                        android:id="@+id/btnVerResultados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#11A3BD"
                        android:padding="8dp"
                        android:text="Ver Resultados"
                        android:textColor="@android:color/white"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
