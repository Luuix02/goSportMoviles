<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextRounded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_rounded_bg</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <!-- Estilo para el título del diálogo -->
    <style name="CustomDialogTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <!-- Puedes agregar más propiedades aquí -->
    </style>

    <!-- Estilo para los botones del diálogo -->
    <style name="CustomDialogButton">
        <item name="android:background">@drawable/border_fase</item>
        <item name="android:textColor">@color/white</item>
        <!-- Puedes agregar más propiedades aquí -->
    </style>



